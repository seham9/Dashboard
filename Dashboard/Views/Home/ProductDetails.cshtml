                                <div class="card-body pt-0">
                                    <!--begin::Table-->
                                    <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_customers_table">
                                        <!--begin::Table head-->
                                        <thead>
                                            <!--begin::Table row-->
                                            <tr class="text-center text-gray-400 fw-bold fs-7 text-uppercase gs-0">

                                             
                                                <th class="min-w-125px " style="font-family:cairo"> اسم المنتج </th>
                                                <th class="min-w-125px " style="font-family:cairo"> السعر </th>
                                                <th class="min-w-125px " style="font-family:cairo"> الطراز </th>
                                                <th class="min-w-125px " style="font-family:cairo"> الكمية </th>
                                                <th class="min-w-125px " style="font-family:cairo"> اللون </th>
                                                <th class="min-w-125px " style="font-family:cairo"> الصورة </th>
                                                
                                                <th class="min-w-125px " style="font-family:cairo" colspan="2">إجراء </th>

                                            </tr>
                                            <!--end::Table row-->
                                        </thead>
                                        <!--end::Table head-->
                                        <!--begin::Table body-->
                                        <tbody class="fw-semibold text-gray-600">
                                            @if (Model != null)
                                            {

                                                @foreach (var item in ProductsDetails)
                                                {
                                                    <tr class="text-center">
                                                        
                                                        <td> @item.ProductName</td>
                                                        <td> @item.Price  </td>
                                                        <td> @item.Model </td>
                                                        <td> @item.Qty  </td>
                                                        <td> @item.Color </td>
                                                        <td> @item.Image </td>
                                                     
                                                        <td>  <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a> </td>
                                                        <td>  <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a> </td>
                                                    </tr>
                                                }
                                            }



                                        </tbody>
                                        <!--end::Table body-->
                                    </table>
                                    <!--end::Table-->
