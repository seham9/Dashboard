                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">إضافة التفاصيل</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <form asp-action="AddProductDetails" method="post">
                                            <div class="modal-body">
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <label for="ProductName">أسم المنتج</label>
                                                   <select name="ProductId"class="form-control form-control-sm">
                                                       @if(Model!= null)
                                                           {
                                                               @foreach(var item in Model)
                                                                    {
                                                                       <option value="@item.Id">@item.ProductName</option>
                                                                    }
                                                           }
                                                   </select>

                                                   <div class="row">
                                                       <div class="col-sm-6">
                                                           <label for="Description">وصف المنتج</label>
                                                           <input type="text" name="Description" id="Description" class="form-control form-control-sm" />
                                                       </div>
                                                       <div class="col-sm-6">
                                                           <label for="Price">سعر المنتج</label>
                                                           <input type="text" name="Price" id="Price" class="form-control form-control-sm" />
                                                       </div>
                                                       <div class="col-sm-6">
                                                           <label for="Model">الطراز </label>
                                                           <input type="text" name="Model" id="Model" class="form-control form-control-sm" />
                                                       </div>
                                                       <div class="col-sm-6">
                                                           <label for="Qty">الكمية </label>
                                                           <input type="text" name="Qty" id="Qty" class="form-control form-control-sm" />
                                                       </div>
                                                       <div class="col-sm-6">
                                                           <label for="Color">اللون</label>
                                                           <input type="text" name="Color" id="Color" class="form-control form-control-sm" />
                                                       </div>
                                                       <div class="col-sm-6">
                                                           <label for="Image">الصورة</label>
                                                           <input type="text" name="Image" id="Image" class="form-control form-control-sm" />
                                                       </div>
                                                            <div class="col-sm-6">
                                                                <label for="Image">ملاحظات</label>
                                                                <input type="text" name="Display" id="Display" class="form-control form-control-sm" />
                                                            </div>
                                                   </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
                                                <button type="submit" class="btn btn-primary">حفظ</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--end::Content container-->
                    </div>
                    <!--end::Content-->
                </div>

            </div>
